{
  "name": "ruckus-ai-bot",
  "version": "1.0.0",
  "description": "AI-powered bot for Ruckus chat using Claude Code",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development WORKSPACE_DIR=. MEMORY_FILE=./MEMORY.md tsx watch src/index.ts",
    "start": "NODE_ENV=production tsx src/index.ts",
    "build": "tsc",
    "sync-types": "cp -r ../../convex/_generated ./convex/",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.74.0",
    "convex": "^1.17.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  }
}
